<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="[%d{HH:mm:ss}] [%t] %highlight{%-5level} %c{1} - %msg%n"/>
        </Console>
        <File name="File" fileName="logs/test.log" append="true">
            <PatternLayout pattern="[%d{HH:mm:ss}] [%t] %-5level %c{1} - %msg%n" />
        </File>
    </Appenders>

    <Loggers>
        <Logger name="org.openqa.selenium" level="info" additivity="false">
            <AppenderRef ref="Console" />
            <AppenderRef ref="File" />
        </Logger>

        <Logger name="org.example" level="debug" additivity="false">
            <AppenderRef ref="Console" />
            <AppenderRef ref="File" />
        </Logger>

        <Root level="warn">
            <AppenderRef ref="Console" />
        </Root>
    </Loggers>
</Configuration>
